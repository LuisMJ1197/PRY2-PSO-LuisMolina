<config>
    <memory-size>
        <main-memory>32</main-memory>
        <disk-memory>1024</disk-memory>
    </memory-size>
    <os-saved-memory>16</os-saved-memory>
    <memory-management>
        <method name="fixed" activated="false">
            <partition-size>8</partition-size> 
        </method> 
        <method name="dynamic" activated="false">
        </method> 
        <method name="paging" activated="true">
            <frame-size>2</frame-size>
        </method> 
        <method name="segmentation" activated="false">
            
        </method> 
    </memory-management>
    <process-scheduler>
        <method name="fcfs" activated="true"></method>
        <method name="rr" activated="false">
            <quantum>2</quantum>
        </method>
        <method name="srt" activated="false"></method>
        <method name="sjf" activated="false"></method>
        <method name="hrrn" activated="false"></method>
    </process-scheduler>
</config>
